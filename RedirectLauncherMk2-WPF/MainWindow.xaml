<metro:MetroWindow x:Class="RedirectLauncherMk2_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://schemes.grabacr.net/winfx/2014/controls"
        xmlns:chrome="http://schemes.grabacr.net/winfx/2014/chrome"
        Background="{DynamicResource ThemeBrushKey}"
		Foreground="{DynamicResource ActiveForegroundBrushKey}"
        Title="MainWindow" Height="577" Width="700.5" UseLayoutRounding="True" ResizeMode="NoResize" Initialized="windowIsReady">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*" />
            <ColumnDefinition Width="147*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" metro:MetroWindow.IsCaptionBar="True" Grid.ColumnSpan="2">
            <Grid Margin="10,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TitleBlock" Grid.Column="0" TextWrapping="Wrap" Text="Redirect Gaming Mabinogi Launcher" VerticalAlignment="Top" FontSize="20" FontWeight="Thin"/>
                <metro:SystemButtons Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Top"/>

            </Grid>
        </Border>
        <WebBrowser Grid.Column="0" Grid.Row="1" Margin="0,10,0,0" Source="http://aura.potato.moe/launcher" Grid.ColumnSpan="2"/>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Button Content="Launch Game" Grid.Column="5"  Grid.RowSpan="4" Height="100" Width="150" FontSize="22" UseLayoutRounding="False" FontWeight="Thin" Click="LaunchGame"/>
            <ProgressBar x:Name="ProgressBar" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="5" Height="10" Margin="10,0"/>
            <TextBlock Grid.Column="0" Grid.Row="2" Margin="10,0" VerticalAlignment="Center" Text="Local Client Version: " />
            <TextBlock x:Name="ClientVersionBlock" Grid.Column="1" Grid.Row="2" Text="XXX" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Grid.Column="2" Grid.Row="2" Margin="10,0" VerticalAlignment="Center" Text="Local Launcher Version: " />
            <TextBlock x:Name="LauncherVersionBlock" Grid.Column="3" Grid.Row="2" Text="XXX" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Grid.Column="0" Grid.Row="3" Margin="10,0" VerticalAlignment="Center" Text="Remote Client Version: " />
            <TextBlock x:Name="RemoteClientVersionBlock" Grid.Column="1" Grid.Row="3" Text="XXX" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Grid.Column="2" Grid.Row="3" Margin="10,0" VerticalAlignment="Center" Text="Remote Launcher Version: " />
            <TextBlock x:Name="RemoteLauncherVersionBlock" Grid.Column="3" Grid.Row="3" Text="XXX" HorizontalAlignment="Left" VerticalAlignment="Center" />
        </Grid>
    </Grid>

</metro:MetroWindow>
